
public class JavaApplication1
 {
    public static void main( String[] args )
    {
        int i = 100;
        while (i!=1){
            if i%2 ==0){
                i = i/2;
                System.out.println(i);
            }else{
                i = i*3 +1;
                System.out.println(i);
            }
        }
        
        
    }
 }
